{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "width": 1000, 
    "height": 500, 
    "title": "World Distribution of Foreign Arrivals in Malaysia between January 2020 and June 2024",  
    "projection": {"type": "equirectangular"}, 
    "layer": [
        {
            "data": {
                "url": "../js/oceans.topojson", 
                "format": {"type": "topojson", "feature": "oceans"}
            }, 
            "mark": {"type": "geoshape", "fill": "aliceblue"}
        },
        {
            "data": {
                "url": "../js/WorldMapWithGraticules.topojson", 
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            }, 
            "mark": {"type": "geoshape", "fill": "darkgray", "stroke": "white"}
        }, 
        {
            "data": {
                "url": "../js/WorldMapWithGraticules.topojson", 
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            }, 
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        }, 
        {
            "data": {
                "url": "../data/arrival_lat_long.csv"
            }, 
            "mark": {"type": "circle"}, 
            "encoding": {
                "longitude": {"field": "longitude", "type": "quantitative"}, 
                "latitude": {"field": "latitude", "type": "quantitative"}, 
                "size": {
                    "field": "total_arrival", 
                    "type": "quantitative", 
                    "title": "Arrival Counts"
                }, 
                "color": {
                    "value": "black"
                }, 
                "tooltip": [
                    {"field": "country", "type": "nominal", "title": "Country"},
                    {"field": "total_arrival", "type": "quantitative", "title": "Arrival Counts"}
                ]
            }
        }
    ]
}
