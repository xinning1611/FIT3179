{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "autosize": {
    "type": "fit", 
    "contains": "padding"
  },
  "view": {
    "stroke": null
  },
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xinning1611/FIT3179/refs/heads/main/week9_homework/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#E9F6FF"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xinning1611/FIT3179/refs/heads/main/week9_homework/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#FFF5CD", "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xinning1611/FIT3179/refs/heads/main/week9_homework/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xinning1611/FIT3179/refs/heads/main/data_visualization_2/data/arrival_country.csv"
      },
      "mark": {"type": "circle", "opacity": 0.9}, 
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "total_arrival",
          "type": "quantitative",
          "title": "Visitor Counts", 
          "scale": {
            "domain": [0, 3000, 300000, 3000000], 
            "range": [5, 15, 50, 100, 350]
          },
          "legend": {
            "title": "Visitor Counts", 
            "values": [0, 30000, 3000000, 30000000], 
            "orient": "bottom", 
            "titleOrient": "left",
            "direction": "horizontal", 
            "offset": 3
          }
        },
        "color": {
          "condition": {"test": "datum.name === 'Singapore'", "value": "#759ECD"},
          "value": "#759ECD"
        },
        "tooltip": [
          {"field": "name", "type": "nominal", "title": "Country"},
          {
            "field": "total_arrival",
            "type": "quantitative",
            "title": "Visitor Counts", 
            "format": ","
          }
        ]
      }
    }, 
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xinning1611/FIT3179/refs/heads/main/week9_homework/data/arrival_lat_long.csv"
      },
      "transform": [
        {
          "window": [{"op": "rank", "as": "ranking"}], 
          "sort": [{"field": "total_arrival", "order": "descending"}]
        }, 
        {"filter": "datum.ranking == 1"}, 
        {"calculate": "'Most of the visitors; come from Singapore'", "as": "text_annotation_raw"}, 
        {"calculate": "split(datum.text_annotation_raw, ';')", "as": "text_annotation"}
      ],
      "mark": {
        "type": "text",
        "dx": 225,
        "dy": 25,
        "fontSize": 10,
        "fontWeight": "bold",
        "color": "#759ECD"
      },
      "encoding": {"text": {"field": "text_annotation"}} 
    }
  ]
}
