{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/xinning1611/FIT3179/refs/heads/main/data_visualization_2/data/state_rank_by_year.csv"
    },
    "view": {
        "stroke": null
    },
    "transform": [{
        "filter": "datum.rank <= rank_slider"
    }],
    "params": [{
        "name": "rank_slider",
        "value": 14,
        "bind": {
            "input": "range",
            "min": 5,
            "max": 14,
            "step": 1,
            "name": "Top State Rankings: "
        }
    }],
    "layer": [{
        "mark": {
            "type": "line",
            "strokeWidth": 3,
            "opacity": 1
        },
        "encoding": {
            "x": {
                "field": "year",
                "type": "ordinal",
                "title": "Year",
                "axis": {
                    "labelAngle": 0,
                    "labelFontSize": 10,
                    "titleFontSize": 12,
                    "grid": true
                }, 
                "scale": {
                    "domain": ["2020", "2021", "2022", "2023", "2024"], 
                    "padding": 0
                }
            },
            "y": {
                "field": "rank",
                "type": "quantitative",
                "title": "Rank",
                "scale": {
                    "domain": {"expr": "[1, rank_slider+1]"},
                    "reverse": true,  
                    "zero": false
                },
                "axis": {
                    "tickCount": 14,
                    "title": "Rank",
                    "grid": false,
                    "tickMinStep": 1,
                    "labelFontSize": 10,
                    "titleFontSize": 12,
                    "values": {"expr": "sequence(1, rank_slider+0.3)"},
                    "format": "d"
                }
            },
            "color": {
                "field": "soe",
                "type": "nominal",
                "scale": {
                    "domain": ["Johor", "Kedah", "Kelantan", "Melaka", "Negeri Sembilan", 
                    "Pahang", "Perak", "Perlis", "Pulau Pinang", 
                    "Sabah", "Sarawak", "Selangor", "Terengganu", "W.P. Labuan"],
                    "range": [
                        "#c5b0d5",
                        "#EBD3F8",
                        "#F5E8DD",
                        "#FCDC94", 
                        "#CB80AB",
                        "#5A72A0",
                        "#E78F81",
                        "#FFC6C6",
                        "#FFF4B5",
                        "#F7DCB9",
                        "#EBE3D5",
                        "#FFDFD6",
                        "#A66E38",
                        "#F8C794",
                        "#E1ACAC"
                    ]
                }, 
                "legend": {
                    "title": "State of Arrival", 
                    "orient": "bottom", 
                    "columns": 5
                }
            },
            "opacity": {
                "condition": {"param": "select_state", "value": 1}, "value": 0.2
            },
            "detail": {"field": "soe"},
            "tooltip": [
                {"field": "soe", "type": "nominal", "title": "State"},
                {"field": "year", "type": "ordinal", "title": "Year"},
                {"field": "rank", "type": "quantitative", "title": "Rank"}
            ]
        },
        "params": [{
            "name": "select_state",
            "select": {"type": "point", "fields": ["soe"]}, 
            "bind": "legend"
        }]
    }, 
    {
        "mark": {
            "type": "point",
            "filled": true,
            "size": 100, 
            "stroke": "black", 
            "strokeWidth": 1
        },
        "encoding": {
            "x": {
                "field": "year",
                "type": "ordinal"
            },
            "y": {
                "field": "rank",
                "type": "quantitative"
            },
            "color": {
                "field": "soe",
                "type": "nominal",
                "scale": {
                    "domain": ["Johor", "Kedah", "Kelantan", "Melaka", "Negeri Sembilan", 
                                "Pahang", "Perak", "Perlis", "Pulau Pinang", 
                                "Sabah", "Sarawak", "Selangor", "Terengganu", "W.P. Labuan"],
                    "range": [
                        "#c5b0d5",
                        "#EBD3F8",
                        "#F5E8DD",
                        "#FCDC94", 
                        "#CB80AB",
                        "#5A72A0",
                        "#E78F81",
                        "#FFC6C6",
                        "#FFF4B5",
                        "#F7DCB9",
                        "#EBE3D5",
                        "#9EB8D9",
                        "#A66E38",
                        "#F8C794",
                        "#E1ACAC"
                        ]
                }, 
                "legend": {
                    "title": "State of Arrival", 
                    "orient": "bottom", 
                    "columns": 5
                }
            },
            "opacity": {
                "condition": {"param": "select_state", "value": 1}, "value": 0.2
            },
            "tooltip": [
                {"field": "year", "type": "ordinal", "title": "Year"},
                {"field": "rank", "type": "quantitative", "title": "Rank"}, 
                {"field": "soe", "type": "nominal", "title": "State"},
                {"field": "total_arrivals", "type": "quantitative", "format": ",", "title": "Visitor Counts"}

            ]
        }
    }]
}
